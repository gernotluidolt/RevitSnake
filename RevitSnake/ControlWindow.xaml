<Window x:Class="RevitSnake.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Control" Height="200" Width="200"
        Topmost="True">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Use WASD to move the snake" />
            <Button Name="PauseButton" Content="Pause" Width="100" Height="30" Margin="10" Click="PauseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
